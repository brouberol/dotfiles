set color256 on
set number on
set shellopts '-eu'
set previewer ~/.config/lf/pv.sh

map i $~/.config/lf/pv.sh $f
map gh cd ~
map <esc> quit

# Always open text files with $EDITOR
cmd open ${{
    case $(file --mime-type -b --dereference $f) in
        text/*) $EDITOR $fx;;
        *) for f in $fx; do xdg-open $f > /dev/null 2> /dev/null & done;;
    esac
}}
